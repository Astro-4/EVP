@model EVP.ViewModels.EventsBookings

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Event Date
            </th>
            <th>
                Type
            </th>
            <th>
                Fee
            </th>
            <th>
                Venue
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event_type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue.ID)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<h1>Current Bookings For the Event:</h1>
@if (Model.Bookings != null)
{
<table class="table">
    <thead>
        <tr>
            <th>
                Booking Date
            </th>
            <th>
                Booking Fee
            </th>
            <th>
                Event Name
            </th>
            <th>
                Attendee Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bookings)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Booking_fee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Event.Event_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Contact_no)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}